<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE6BA"
    android:textColor="#000000"
    tools:context=".IqActivity">


    <Button
        android:id="@+id/btn1"
        android:layout_width="316dp"
        android:layout_height="57dp"
        android:layout_marginBottom="80dp"

        android:backgroundTint="#38A13C"
        android:text="Boton 1"
        android:textColor="#FFFFFF"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Labelmostrar"
        android:layout_width="284dp"
        android:layout_height="52dp"
        android:layout_marginBottom="44dp"


        android:hint="Label1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/CampoText1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncapturar"
        app:layout_constraintVertical_bias="0.135"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/CampoText1"
        android:layout_width="347dp"
        android:layout_height="58dp"
        android:layout_marginTop="320dp"
        android:layout_marginBottom="16dp"
        android:hint="Campo de Texto 1"
        app:layout_constraintBottom_toTopOf="@+id/CampoText2"
        app:layout_constraintTop_toTopOf="@+id/fondo"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/CampoText2"
        android:layout_width="347dp"
        android:layout_height="58dp"
        android:layout_marginTop="388dp"
        android:layout_marginBottom="212dp"
        android:hint="Campo de Texto 2"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@+id/fondo"
        app:layout_constraintVertical_bias="0.739"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>